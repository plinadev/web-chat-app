{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "backend/dist",
    "rootDir": "backend/src", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"] 
  },
  "ts-node": {
    "esm": true
  },
  "include": ["backend/src"],
  "exclude": ["node_modules", "frontend", "**/*.spec.ts"]
}
